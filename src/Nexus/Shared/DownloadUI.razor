@inherits StateComponentBase

<div class="downloader-headline">
    <MatHeadline2>Preparing download (@NexusUtilities.FormatByteCount(this.UserState.GetByteCount()))</MatHeadline2>
</div>

<div class="downloader-content">
    <div class="small-text">
        Read progress:
    </div>
    <MatProgressBar Progress="@this.UserState.ReadProgress"></MatProgressBar>

    <div class="small-text">
        Write progress:
    </div>
    <MatProgressBar Progress="@this.UserState.WriteProgress"></MatProgressBar>

    @if (!this.IsCancelling)
    {
        <MatButton Raised="true" @onclick="this.CancelDownload">Cancel</MatButton>
    }
    else
    {
        <MatButton Raised="true" Disabled="true">Cancelling ...</MatButton>
    }
</div>