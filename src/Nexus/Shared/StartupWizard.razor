@using System.Runtime.InteropServices

<div class="startup-settings-box">
    <div class="startup-settings-subbox">
        <MatBlazor.MatHeadline2>Welcome to your new Nexus Explorer instance!</MatBlazor.MatHeadline2>
        <MatBlazor.MatSubtitle1>Please select the database location to continue.</MatBlazor.MatSubtitle1>

        @if (RuntimeInformation.IsOSPlatform(OSPlatform.Linux))
        {
            <MatTextField @bind-Value="@this.Options.DataBaseFolderPath"
                          Label="e.g. /var/lib/nexus">
            </MatTextField>
        }
        else if (RuntimeInformation.IsOSPlatform(OSPlatform.Windows))
        {
            <MatTextField @bind-Value="@this.Options.DataBaseFolderPath"
                          Label="e.g. D:\Nexus">
            </MatTextField>
        }

        <MatButton @onclick="this.TryInitializeApp"
                   Outlined="true">
            Continue
        </MatButton>

        @if (!string.IsNullOrWhiteSpace(this.Error))
        {
            <MatBlazor.MatSubtitle2>@this.Error</MatBlazor.MatSubtitle2>
        }
    </div>
</div>