<MatDialog @bind-IsOpen="@this.IsOpen" CanBeClosed="false">
    <MatDialogTitle>Choose catalog(s)</MatDialogTitle>
    <MatDialogContent>
        <p>Select one or more catalogs you need access to.</p>

        <div class="flex-column">
            @foreach (var state in this.CatalogContainerStates)
            {
                <MatCheckbox @bind-Value="state.IsSelected" Label="@state.Id"></MatCheckbox>
            }
        </div>
    </MatDialogContent>
    <MatDialogActions>
        <MatButton OnClick="this.OK" Outlined="true">OK</MatButton>
        <MatButton OnClick="this.Cancel">Cancel</MatButton>
    </MatDialogActions>
</MatDialog>