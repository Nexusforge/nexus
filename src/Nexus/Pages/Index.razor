@page "/"
@inherits StateComponentBase

@if (this.UserState.ClientState != ClientState.PrepareDownload)
{
    <div class="left-column">
        <div class="settings-box mat-elevation-z11">
            <SettingsBox />
        </div>
    </div>
    <div class="center-column">
        @if (this.UserState.ClientState != ClientState.DataVisualizing)
        {
            <div class="catalog-box mat-elevation-z11">
                <CatalogBox />
            </div>
            <div class="resource-box mat-elevation-z11">
                @if (this.UserState.ClientState != ClientState.Availability)
                {
                    <ResourceBox />
                }
                else
                {
                    <AvailabilityBox />
                }
            </div>
        }
        else
        {
            <div class="visualize-box mat-elevation-z11">
                <VisualizeBox />
            </div>
        }
    </div>
    <div class="right-column">
        <div class="news-box mat-elevation-z11">
            <NewsTicker />
        </div>
        <div class="selected-resource-box mat-elevation-z11">
            <DownloadBox />
        </div>
    </div>
}
else
{
    <div class="downloader mat-elevation-z11">
        <DownloadUI />
    </div>
}
