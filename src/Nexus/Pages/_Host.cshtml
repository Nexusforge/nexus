@page "/"
@model Nexus.Pages.HostModel
@namespace Nexus.Pages

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="@Model.Language">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nexus</title>
    <base href="~/" />
    <link rel="stylesheet" href="Nexus.styles.css" />
    <link rel="stylesheet" href="_content/MatBlazor/dist/matBlazor.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/uplot/uPlot.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/material-design-icons-iconfont/dist/material-design-icons.css">
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="Server" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="_content/MatBlazor/dist/matBlazor.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/charting.js"></script>
    <script src="~/js/monaco-omnisharp.js"></script>
    <script src="~/lib/uplot/uPlot.iife.js"></script>
    <script src="~/lib/font-awesome/js/fontawesome.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>

    <!-- ChartJs (must come before Monaco due to loader conflicts (redefinition of "define" function?) -->
    <script src="~/lib/Chart.js/Chart.bundle.min.js" type="text/javascript" language="javascript"></script>
    <script src="_content/ChartJs.Blazor.Fork/ChartJsBlazorInterop.js" type="text/javascript" language="javascript"></script>

    <!-- Monaco -->
    <script src="~/lib/monaco-editor/min/vs/loader.js"></script>
    <script>require.config({ paths: { 'vs': 'lib/monaco-editor/min/vs' } });</script>
    <script src="~/lib/monaco-editor/min/vs/editor/editor.main.js"></script>
</body>
</html>
