<div class="group truncate">
    <span class="
        transition duration-300 delay-500 ease-in-out 
        text-xs text-white bg-black
        invisible py-2 px-4 absolute rounded -mt-10 z-50
        opacity-0 group-hover:opacity-70 group-hover:visible">
        @Tooltip
    </span>
    @ChildContent
</div>

@code {
    [Parameter]
    public string Tooltip { get; set; } = default!;

    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;
}

