<UIIconButton Icon="information-outline" @onclick="OpenCatalogAboutModal" />

<UIModal @bind-IsOpen="_isCatalogAboutModalOpen" Title="About" Width="400px" AutoHeight="true">
    @if (string.IsNullOrWhiteSpace(Catalog.Info.SourceProjectUrl) && string.IsNullOrWhiteSpace(Catalog.Info.SourceRepositoryUrl))
    {
        <div class="h-full flex justify-center items-center text-gray-300">
            <span class="mr-3 text-4xl mdi mdi-pac-man"></span>
            <span>no data available</span>
        </div>
    }
    else
    {
        <h1 class="uppercase tracking-widest p-1 pt-2">data source</h1>

        <div class="flex flex-col">
            @if (!string.IsNullOrWhiteSpace(Catalog.Info.SourceProjectUrl))
            {
                <a class="text-cyan-700 hover:text-orange-500 p-1" href="@Catalog.Info.SourceProjectUrl" target="_blank">
                    <span class="mdi mdi-web text-xl mr-1"></span>
                    <span>Project Website</span>
                </a>
            }
            @if (!string.IsNullOrWhiteSpace(Catalog.Info.SourceRepositoryUrl))
            {
                <a class="text-cyan-700 hover:text-orange-500 p-1" href="@Catalog.Info.SourceRepositoryUrl" target="_blank">
                    <span class="mdi mdi-source-branch text-xl mr-1"></span>
                    <span>Repository</span>
                </a>
            }
        </div>
    }
</UIModal>

@code {
    private bool _isCatalogAboutModalOpen;

    [Parameter]
    public ResourceCatalogViewModel Catalog { get; set; } = default!;

   
    private void OpenCatalogAboutModal()
    {
        _isCatalogAboutModalOpen = true;
    }
}