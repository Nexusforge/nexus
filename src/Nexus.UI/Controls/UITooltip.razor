<div class="group relative">
    <span class="
        text-xs text-white bg-black
        hidden py-2 px-4 absolute rounded -mt-10 z-50
        opacity-0 group-hover:opacity-70 group-hover:block">
        @Tooltip
    </span>
    @ChildContent
</div>

@code {
    [Parameter]
    public string Tooltip { get; set; } = default!;

    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;
}

