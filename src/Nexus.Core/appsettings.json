{
  "DetailedErrors": false,
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft": "Warning",
        "Nexus": "Information",
        "Serilog": "Information"
      }
    },
    "Enrich": [ "WithClientIp", "WithCorrelationId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Level:u3}: {SourceContext}{NewLine}     {Message} {NewLine}{Exception}"
        }
      }
    ]
  },
  "Identity": {
    "SignIn": {
      "RequireConfirmedAccount": true
    },
    "Stores": {
      "MaxLengthForKeys": 128
    }
  },
  "General": {
    "BlindSample": "General",
    "ApplicationName": "Nexus",
    "Language": "en"
  },
  "Server": {
    "BlindSample": "Server",
    "HttpScheme": "https",
    "HttpAddress": "0.0.0.0",
    "HttpPort": "8443"
  },
  "Paths": {
    "BlindSample": "Paths"
  },
  "Security": {
    "BlindSample": "Security",
    "JwtTokenLifeTime": "01:00:00",
    "RefreshTokenLifeTime": "2.00:00:00"
  },
  "Smtp": {
    "BlindSample": "Smtp",
    "Host": "localhost",
    "Port": "25",
    "FromAddress": "admin@nexus.localhost",
    "FromName": "Nexus"
  }
}
