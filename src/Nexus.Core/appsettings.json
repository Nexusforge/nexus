{
  "DetailedErrors": false,
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft": "Warning",
        "Nexus": "Information",
        "Serilog": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Level:u3}: {SourceContext}{NewLine}     {Message} {NewLine}{Exception}"
        }
      }
    ]
  },
  "General": {
    "BlindSample": "General",
    "InstanceName": "Nexus",
    "Language": "en"
  },
  "Server": {
    "BlindSample": "Server",
    "HttpScheme": "http",
    "HttpAddress": "0.0.0.0",
    "HttpPort": "8080"
  },
  "Paths": {
    "BlindSample": "Paths"
  },
  "Security": {
    "BlindSample": "Security"
  },
  "Users": {
    "BlindSample": "Users",
    "VerifyEmail": false
  },
  "Smtp": {
    "BlindSample": "Smtp",
    "Host": "localhost",
    "Port": "25",
    "FromAddress": "admin@nexus.localhost",
    "FromName": "Nexus"
  }
}
